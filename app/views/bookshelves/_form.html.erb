<div class="bookshelf-form-container">
  <h1 class="form-title">Create Your Bookshelf</h1>
  <p class="form-subtitle">Add a new collection to organize your favorite books</p>
  
  <div class="form-progress">
    <div class="progress-dot active"></div>
    <div class="progress-dot"></div>
    <div class="progress-dot"></div>
  </div>

  <%= form_with(model: bookshelf) do |form| %>
    <% if bookshelf.errors.any? %>
      <div class="error-container">
        <h2><%= pluralize(bookshelf.errors.count, "error") %> prohibited this bookshelf from being saved:</h2>
        <ul>
          <% bookshelf.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Title field -->
    <div class="form-field title-field">
      <%= form.label :title, "Bookshelf Title" %>
      <%= form.text_field :title, placeholder: "Enter a descriptive title..." %>
    </div>

    <!-- Author field -->
    <div class="form-field author-field">
      <%= form.label :author %>
      <%= form.text_field :author, placeholder: "Who curated this collection?" %>
    </div>

    <!-- Description field -->
    <div class="form-field description-field">
      <%= form.label :description %>
      <%= form.text_area :description, placeholder: "Describe this bookshelf and what makes it special..." %>
    </div>

    <!-- Submit button -->
    <div class="submit-container">
      <%= form.submit "Create Bookshelf", class: "submit-btn" %>
    </div>
  <% end %>
</div>